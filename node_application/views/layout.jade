doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
body
	div(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
		div.container
			div.navbar-header
				button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
					span.sr-only	Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a(class="navbar-brand", href="/")	Node][Man
			div(class="collapse navbar-collapse")
				ul(class="nav navbar-nav")
					li(class="#{page_name === 'home' ? 'active' : ''}")
						a(href="/")	Home
					li(class="#{page_name === 'about' ? 'active' : ''}")
						a(href="/about")	About
					li(class="#{page_name === 'contact' ? 'active' : ''}")
						a(href="/contact")	Contact
					li(class="#{page_name === 'users' ? 'active' : ''}")
						a(href="/users")	Users

	div.container
		div.rows
			-if (notifications.length > 0) {
				each notification in notifications
					div(class="alert alert-#{notification.type ? notification.type : 'info'}")=	notification.message
			-}

			block content

	div.footer
		hr
		p(class="text-center")	&copy; Node][Man

	script(type="text/javascript", src="/javascripts/jquery-1.8.3.min.js")
	script(type="text/javascript", src="/bootstrap/js/bootstrap.js")
	script(type="text/javascript", src="/javascripts/jquery.validate.min.js")
	script(type="text/javascript", src="/javascripts/application.js")